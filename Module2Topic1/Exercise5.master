            border-radius: 15px;
            overflow: hidden;
            width: 1500px;
            height: 400px;
        }

        #main-frame {
            display:flex;
            justify-content: center;
            padding: 30px;
        }

        #title {
            display: flex;
            justify-content: center;
            padding: 20px;
        }

        .questions {
            display: flex;
            justify-content: flex-start;
            margin-right: 50px;
            margin-left: 50px;
            margin-bottom: 25px;
            margin-top: 30px;
        }

        .answer {
            display: flex;
            justify-content: flex-start;
            margin-left: 120px;
            margin-bottom: 18px;
            margin-top: 15px;
            margin-right: 80px;
            word-wrap: break-word;
        }

        #footer {
            display: flex;
            padding: 30px;
            justify-content: center;
            margin-top: 30px;
            background-color:black;
        }

        #footer p {
            padding: 20px;
            color: #808080;
        }
    </style>
</head>
