    <style>
        body {
            margin: 0px;
            padding: 0px;
            background-color: rgb(128 128 128);
            &::webkit-scrollbar {
                                    display:none;
                                }
        }

        #exercices-nav{
            display:flex;
            justify-content:center;
            width: 1000px;
            background-color: rgb(255,255,255);
        }

        #exercises-nav ul {
            list-style-type: none;
            justify-content: space-around;
            margin-bottom: 0px;
        }

        #exercises-nav li {
            display: inline-block;
            padding: 20px;
            border-bottom: solid 5px black;
